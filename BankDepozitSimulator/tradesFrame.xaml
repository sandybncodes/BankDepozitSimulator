<UserControl x:Class="BankDepozitSimulator.tradesFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankDepozitSimulator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="tradesMainGrid" Background="#FF2A333C">
        <TextBox x:Name="countTextBox" HorizontalAlignment="Left" Margin="85,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="231,19,0,0" VerticalAlignment="Top" Width="71" Click="Button_Click"/>

        <!-- ScrollViewer added here -->
        <ScrollViewer x:Name="tradesScroll" HorizontalScrollBarVisibility="Auto" Margin="0,49,0,10" VerticalScrollBarVisibility="Auto">
            <!--<StackPanel x:Name="tradesListStackPanel" Background="#FFFF5959" Height="300"/>-->
            <ToolBarPanel x:Name="tradesToolBarPanel" Margin="0,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="381"/>
        </ScrollViewer>
    </Grid>
</UserControl>
